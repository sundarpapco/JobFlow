<resources>
    <!-- Base application theme. -->

    <style name="Theme.JobFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface_grey</item>
        <item name="colorOnSurface">@android:color/white</item>

        <item name="colorBackgroundFloating">@color/dialog_background</item>
        <item name="android:colorBackgroundFloating">@color/dialog_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dialog_background</item>
        <!-- Customize your theme here. -->
        <item name="colorLightOnDark">@android:color/white</item>
        <item name="colorDarkOnLight">@android:color/black</item>

    </style>


    <style name="FragmentHeadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fragment_heading_text_size</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>


</resources>