<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.JobFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface_grey</item>
        <item name="colorOnSurface">@android:color/white</item>

        <item name="colorBackgroundFloating">@color/dialog_background</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/dialog_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">@color/dialog_background</item>
        <!-- Customize your theme here. -->
        <item name="colorLightOnDark">@android:color/white</item>
        <item name="colorDarkOnLight">@android:color/black</item>

    </style>


    <style name="FragmentHeadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fragment_heading_text_size</item>
        <item name="fontFamily">@font/segoeui</item>
    </style>

    <style name="detailText">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="fontFamily">@font/segoeui</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="popUpMenuTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/menu_grey</item>
    </style>



</resources>