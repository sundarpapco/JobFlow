<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/surface_background">

    <TextView
        android:id="@+id/lbl_colors"
        style="@style/detailText"
        android:text="@string/colours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_colors"
        style="@style/detailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_colors"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5 (CMYK+LB)"
        android:textAlignment="textEnd"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_grey"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_colors"/>

    <TextView
        android:id="@+id/txt_printing_detail"
        style="@style/detailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        tools:text="Colours - CMYK + SV0089 \n \n 58.5 X 91 cms - 1200 Sheets"/>



</androidx.constraintlayout.widget.ConstraintLayout>